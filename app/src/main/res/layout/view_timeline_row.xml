<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/timeline_picture_size"
        android:layout_height="@dimen/timeline_picture_size"
        android:src="@drawable/tw__ic_logo_default"
        android:background="@color/tw__light_gray"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_label"
        tools:text="username"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toLeftOf="@+id/date_label"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_label"
        tools:text="content"
        android:layout_toRightOf="@+id/user_image"
        android:layout_below="@+id/username_label"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/date_label"
        tools:text="10 ago"
        android:layout_alignParentRight="true"
        android:gravity="right"/>

</RelativeLayout>